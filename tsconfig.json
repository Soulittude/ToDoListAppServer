{
  "compilerOptions": {
    "target": "ES2020", // More modern target
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true, // Faster compilation
    "forceConsistentCasingInFileNames": true, // Prevent case issues
    "moduleResolution": "node" // Explicit module resolution
  },
  "include": ["src/**/*.ts"], // Explicit TS files only
  "exclude": ["node_modules", "dist"]
}
